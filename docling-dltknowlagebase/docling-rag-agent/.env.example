# Database Configuration
# PostgreSQL with PGVector extension
DATABASE_URL=postgresql://raguser:ragpass123@localhost:5432/postgres

# OpenAI Configuration (Required)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Model Selection
# Choose which OpenAI model to use for both ingestion and agent
LLM_CHOICE=gpt-4o-mini

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small

# Development Settings
LOG_LEVEL=INFO
DEBUG_MODE=false

# Ceramic Network Configuration
# URL of the Ceramic One node (local or remote)
CERAMIC_URL=http://localhost:5101

# Ceramic Service URL (Node.js service for Python integration)
CERAMIC_SERVICE_URL=http://localhost:3001

# DID Configuration
# Base64-encoded 32-byte seed for agent DID (did:key)
# Generate with: openssl rand -base64 32
# WARNING: Keep this secret! Never commit to git!
AGENT_DID_SEED_BASE64=your-base64-encoded-seed-here

# IPFS Pinning Service Configuration
# Options: pinata, infura, local
IPFS_PINNING_SERVICE=pinata

# Pinata Configuration (if using Pinata)
PINATA_API_KEY=your-pinata-api-key
PINATA_API_SECRET=your-pinata-api-secret
PINATA_JWT=your-pinata-jwt

# Local IPFS Configuration (if using local IPFS)
IPFS_API_URL=http://localhost:5001

# Ceramic Integration Options
ENABLE_CERAMIC_STREAMS=true
CERAMIC_BATCH_SIZE=10
CERAMIC_RETRY_ATTEMPTS=3